.container
  = link_to 'New Post', new_post_path
  .row
  - @posts.each do |post|
    .col-sm-3
      .card{:style => "width: 18rem;"}
        .card-body
          %h5.card-title 
            = post.place
          %h6.card-subtitle.mb-2.text-muted 
            = post.title
          %p.card-text 
            = post.details
          %a.card-link{:href => "#"} Card link
          %a.card-link{:href => "#"} Another link   
      



